<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="iOS Smoke Test Suite" verbose="1" parallel="tests" thread-count="1">
    <parameter name="platform" value="iOS"/>
    <listeners>
        <listener class-name="com.curbside.automation.uifactory.WebDriverListener" />
    </listeners>
    <test name="iOS- Applaunch">
            <classes>
                <class name="com.curbside.ios.runners.AppLaunchTest"/>
            </classes>
        </test>
        <test name="iOS- Sign up">
            <classes>
                <class name="com.curbside.ios.runners.SignUpTest"/>
            </classes>
        </test>
        <test name="iOS- Sign in">
            <classes>
                <class name="com.curbside.ios.runners.LoginTest"/>
            </classes>
        </test>
        <test name="iOS- Store Selection">
            <classes>
                <class name="com.curbside.ios.runners.StoreSelectionTest"/>
            </classes>
        </test>
        <test name="iOS- Product Catelog">
            <classes>
                <class name="com.curbside.ios.runners.ProductCatalogTest"/>
            </classes>
        </test>
    <test name="iOS- CartBuilding And Checkout">
            <classes>
                <class name="com.curbside.ios.runners.CartBuildingAndCheckoutTest"/>
            </classes>
       </test>
    <test name="iOS- Delivery Promo code">
        <classes>
            <class name="com.curbside.ios.runners.DeliveryPromoTest"/>
        </classes>
    </test>

</suite>