<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="iOS Smoke Test Suite" verbose="1" parallel="classes" thread-count="1">
	<parameter name="platform" value="iOS"/>
    <listeners>
        <listener class-name="com.curbside.automation.uifactory.WebDriverListener" />
    </listeners>
    <test name="iOS- Application Launch">
        <classes>
            <class name="com.curbside.ios.runners.AppLaunchTest"/>
        </classes>
    </test>
    <test name="iOS- Sign up">
        <classes>
            <class name="com.curbside.ios.runners.SignUpTest"/>
        </classes>
    </test>
    <test name="iOS- Login">
        <classes>
            <class name="com.curbside.ios.runners.LoginTest"/>
        </classes>
    </test>
</suite>